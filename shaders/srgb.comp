#version 460

layout(rgba8, binding = 0) uniform restrict image2D img;

layout(local_size_x = 8, local_size_y = 8) in;
void main() {
    vec4 pixel = imageLoad(img, ivec2(gl_GlobalInvocationID.xy));

    pixel = mix(pixel / 12.92f, pow((pixel + 0.055f) / 1.055f, vec4(2.4f)), greaterThan(pixel, vec4(0.04045f)));

    imageStore(img, ivec2(gl_GlobalInvocationID.xy), pixel);
}